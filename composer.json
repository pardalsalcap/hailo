{
    "name": "pardalsalcap/hailo",
    "description": "This is my package hailo",
    "keywords": [
        "pardalsalcap",
        "laravel",
        "hailo"
    ],
    "homepage": "https://github.com/pardalsalcap/hailo",
    "license": "MIT",
    "authors": [
        {
            "name": "pardalsalcap",
            "email": "dani.casasnovas@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "blade-ui-kit/blade-icons": "^1.5",
        "illuminate/contracts": "^10.0",
        "lab404/laravel-impersonate": "^1.7",
        "laravel/sanctum": "^3.3",
        "league/commonmark": "^2.4",
        "livewire/livewire": "^3.3",
        "lorisleiva/laravel-actions": "^2.7",
        "spatie/laravel-package-tools": "^1.14.0",
        "spatie/laravel-permission": "^6.3",
        "spatie/laravel-tags": "^4.5"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "larastan/larastan": "^2.0.1",
        "laravel-lang/common": "^6.1",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "rayvenues/eloquent-model-generator": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Pardalsalcap\\Hailo\\": "src/",
            "Pardalsalcap\\Hailo\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pardalsalcap\\Hailo\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-hailo --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pardalsalcap\\Hailo\\HailoServiceProvider"
            ],
            "aliases": {
                "Hailo": "Pardalsalcap\\Hailo\\Facades\\Hailo"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
